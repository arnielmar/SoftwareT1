                        <Font size="18.0" />
                    </font>
                </Label>

                <Label fx:id="locationLabel" layoutX="56.0" layoutY="93.0" styleClass="smallLabel" stylesheets="@Hotel.css" text="Place" />
                <Label fx:id="personLabel" layoutX="56.0" layoutY="241.0" styleClass="smallLabel" stylesheets="@Hotel.css" text="Persons" />
